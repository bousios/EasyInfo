<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EasyInfoArxiki" 
    android:background="@drawable/p5">

    <EditText
        android:id="@+id/text_thesi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:paddingBottom="6dip"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingTop="6dip"
        android:background="#CCAAAAAA"
        android:textColor="#FFFFFF"
        android:hint="Ανάκτηση θέσεως χρήστη. Παρακαλώ περιμένετε..."
        android:textSize="16sp" />
    
        <TextView
        android:id="@+id/label_aktina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:background="#CCAAAAAA"
        android:paddingBottom="6dip"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
        android:paddingTop="6dip"
        android:text="Ακτίνα ανάκτησης(m):"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

        <EditText
            android:id="@+id/text_aktina"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/label_aktina"
            android:layout_toRightOf="@+id/label_aktina"
            android:background="#CCAAAAAA"
            android:ems="10"
            android:inputType="number"
            android:paddingBottom="6dip"
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingTop="6dip"
            android:textColor="#000000"
            android:textSize="16sp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button_anaktisi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Ανάκτηση Πληροφοριών" />

</RelativeLayout>